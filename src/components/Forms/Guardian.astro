---
import "./Fields.css";
import "./Droparea.css";
---

<fieldset>
  <legend>Informações do Responsavel</legend>
  <div class="input_wrapper">
    <label for="gardian" id="gardian">Nome do Responsável</label>
    <input type="text" id="gardian" name="gardian" />
    <small>Principal responsável legal e contato de emergência</small>
  </div>
  <div class="input_wrapper">
    <label for="phone" id="phone">Telefone</label>
    <input type="tel" id="phone" name="phone" placeholder="(11) 9999-99999" />
  </div>
  <div class="input_wrapper">
    <label for="mail" id="mail">E-mail</label>
    <input type="email" id="mail" name="mail" placeholder="" required />
    <div class="error">
      <img src="/icons/alert-circle.svg" alt="icone de alerta" />
      <span>Insira um e-mail válido</span>
    </div>
  </div>
</fieldset>

<style>
  input {
    &:invalid {
      border: 0.125rem solid var(--color-semantic-error);
    }
    & + small {
      font: var(--text-sm);
      color: var(--color-small);
      display: inline-block;
      margin-top: 0.25rem;
    }
    &[required] + .error {
      display: flex;
      gap: 0.25rem;
      font: var(--text-sm);
      color: var(--color-semantic-error);
      align-items: center;
      margin-top: 0.25rem;
    }
    &:not(:focus):valid + .error {
      display: none;
    }
  }
</style>
